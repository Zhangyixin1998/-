<!--区域1：学历信息-->
<view class="container1">
  <view class="title">
    <image src="/images/xueli.png"></image>
    <text>学历信息</text>
  </view>
  <view class="edu-list">
    <view class="edu-item" wx:for="{{eduList}}">
      <image src="{{item.src}}"></image>
      <text>{{item.info}}</text>
    </view> 
  </view>
</view>

<!-- 区域2：荣誉信息 -->
<view class="container2">
  <view class="title">
    <image src="/images/praise.png"></image>
    <text>荣誉信息</text>
  </view>
  <view class="praise-list">
    <view class="praise-item" wx:for="{{praiseList}}" wx:key="{{item.id}}">
      <image src="/images/good.png"></image>
      <text>{{item.praise}}</text>
    </view>
  </view>
</view>
