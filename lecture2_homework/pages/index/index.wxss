/* 幻灯片样式 */
swiper{
  height: 480rpx;
  width: 100%
}
swiper image{
  height: 100%;
  width: 100%
}

/* 信息样式 */
.info-list{
  width: 100%;
  min-height: 500rpx;
}
.info-item{
  width: 95%;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx dotted #ADD8E6;
  margin: 10rpx;
}
.info-item image{
  height: 60rpx;
  width: 60rpx;
  margin:15rpx;
}
.info-item text{
  font-size: 32rpx;
  color:black;
  margin: 20rpx;
  flex-grow: 1;
}
